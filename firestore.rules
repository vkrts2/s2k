rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar sadece kendi verilerine (ve alt koleksiyonlarına) erişebilir
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // (İsteğe bağlı) Üst seviye koleksiyonlar için ortak okuma izni
    match /{collection}/{docId} {
      allow read: if request.auth != null && collection in ['sales', 'payments', 'purchases', 'paymentsToSuppliers', 'customers', 'suppliers', 'stock'];
    }
  }
}